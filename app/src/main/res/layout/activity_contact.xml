<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactSellerActivity">

    <EditText
        android:id="@+id/nameContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="235dp"
        android:ems="10"
        android:hint="Nom "
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/mailContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="187dp" />

    <EditText
        android:id="@+id/telContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="232dp"
        android:ems="10"
        android:hint="N° Téléphone"
        android:inputType="phone"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/messageContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="157dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:textSize="24sp" />

    <Button
        android:id="@+id/submitContact"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:text="Envoyer" />

    <Button
        android:id="@+id/resetContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/submitContact"
        android:layout_centerHorizontal="true"
        android:text="Effacer" />

    <Button
        android:id="@+id/returnContact"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/submitContact"
        android:text="Retour à l'annonce" />

    <TextView
        android:id="@+id/titreContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/returnContact"
        android:text="TITRE"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prixContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/categorieContact"
        android:layout_marginTop="78dp"
        android:text="PRIX"
        android:textColor="#5f81af"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagevendeurContact"
        android:layout_width="101dp"
        android:layout_height="106dp"
        android:layout_above="@+id/vendeurContact"
        android:layout_alignEnd="@+id/submitContact"
        android:layout_marginBottom="-123dp"
        app:srcCompat="@drawable/seller" />

    <TextView
        android:id="@+id/vendeurContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="123dp"
        android:text="NOM VENDEUR"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titreContact"
        android:layout_below="@+id/prixContact"
        android:text="Date"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/categorieContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titreContact"
        android:layout_marginTop="45dp"
        android:text="Catégorie"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

</RelativeLayout>