<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomepageActivity">

    <ListView
        android:id="@+id/ListEntry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/titleEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:fontFamily="@font/alegreya_sans_sc_medium" />

    <TextView
        android:id="@+id/dateEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titleEntry"
        android:layout_marginTop="39dp"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:fontFamily="@font/alegreya_sans_sc_thin" />

    <TextView
        android:id="@+id/categorieEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleEntry"
        android:layout_alignTop="@+id/priceEntry"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/priceEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="91dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageEntry"
        android:layout_width="88dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/titleEntry"
        android:layout_marginStart="17dp"
        app:srcCompat="@android:color/transparent" />

</RelativeLayout>